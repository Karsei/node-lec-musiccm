                                             <div class="col-sm-6 sheet-body">
                                                  <h4><%= boardData[i].a_title %> <small><label class="label label-info"><%= boardData[i].c_name %></label></small></h4>
                                                  <p><%- _trimDotString(striptags(boardData[i].a_content), 100) %></p>
